<div class="flex-grow-1 d-flex flex-column">
  <div class="bg-color">
    <section class="search-histories-width pt-3 mx-auto text-break">
      <h1 class="title">検索履歴</h1>

      <section class="row mt-3">
        <section class="col-md">
          <% @histories.each_with_index do |history, i| %>
            <% if i < 5 %>
              <a href="<%= history.shop_url %>" class="text-decoration-none text-body" target="_blank" rel="noopener noreferrer">
                <li class="mb-2 border border-secondary list-style d-flex align-items-center">
                  <div class="search-histories-shop-photo-border">
                    <img src="<%= history.shop_photo %>" alt="店舗写真" class="search-histories-shop-photo">
                  </div>
                  <div class="p-2">
                    <div class="d-flex">
                      <p class="m-0 text-nowrap">日付　：</p>
                      <p class="m-0"><%= history.displayed_date.strftime("%Y/%m/%d %H:%M:%S") %></p>
                    </div>
                    <div class="d-flex">
                      <p class="m-0 text-nowrap">店舗名：</p>
                      <p class="m-0"><%= history.shop_name %></p>
                    </div>
                  </div>
                </li>
              </a>
            <% end %>
          <% end %>
        </section>
        <section class="col-md">
          <% @histories.each_with_index do |history, i| %>
            <% if i >= 5 %>
              <a href="<%= history.shop_url %>" class="text-decoration-none text-body" target="_blank" rel="noopener noreferrer">
                <li class="mb-2 border border-secondary list-style d-flex align-items-center">
                  <div class="search-histories-shop-photo-border">
                    <img src="<%= history.shop_photo %>" alt="店舗写真" class="search-histories-shop-photo">
                  </div>
                  <div class="p-2">
                    <div class="d-flex">
                      <p class="m-0 text-nowrap">日付　：</p>
                      <p class="m-0"><%= history.displayed_date.strftime("%Y/%m/%d %H:%M:%S") %></p>
                    </div>
                    <div class="d-flex">
                      <p class="m-0 text-nowrap">店舗名：</p>
                      <p class="m-0"><%= history.shop_name %></p>
                    </div>
                  </div>
                </li>
              </a>
            <% end %>
          <% end %>
        </section>
        <p class="m-0 text-end footer-size">【画像提供：ホットペッパー グルメ】</p>
      </section>
    </section>
  </div>

  <div class="mx-auto mt-3">
    <%= paginate @histories %>
  </div>
</div>
