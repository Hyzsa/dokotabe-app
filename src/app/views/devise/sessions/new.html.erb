<%# ログイン画面 %>
<div class="flex-grow-1">
  <section class="p-5 mx-auto mt-5 bg-color bg-width">
    <h1 class="title mb-4">ログイン</h1>

    <%# ログインフォーム %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "layouts/flash" %>

      <div class="field mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100 form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-100 form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-3 form-check">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "w-100 btn btn-primary"  %>
      </div>
    <% end %>

    <p class="text-center my-1"><em>or</em></p>

    <%# ゲストログイン %>
    <div class="w-100 btn btn-danger mb-2">
      <%= link_to " ゲストログイン", users_guest_sign_in_path, method: :post, type: "button", class: "guest-login" %>
    </div>

    <%# deviseリンク %>
    <div class="form-text">
      <%= render "devise/shared/links" %>
    </div>
  </section>
</div>
