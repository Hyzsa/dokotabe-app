<%# パスワード再設定画面 %>
<div class="flex-grow-1">
  <section class="p-5 mx-auto mt-5 bg-color bg-width">
    <h1 class="title mb-4">パスワード再設定</h1>

    <%# パスワード再設定フォーム %>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field mb-3">
        <%= f.label :password, "新しいパスワード", class: "form-label" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-100 form-control", placeholder: "6文字以上" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation, "新しいパスワード（確認用）", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100 form-control", placeholder: "6文字以上" %>
      </div>

      <div class="actions mb-2">
        <%= f.submit "パスワードを変更", class: "w-100 btn btn-primary" %>
      </div>
    <% end %>

    <%# deviseリンク %>
    <div class="form-text">
      <%= render "devise/shared/links" %>
    </div>
  </section>
</div>
