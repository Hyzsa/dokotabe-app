<div class="mb-5 text-center flex-grow-1 d-flex flex-column justify-content-center">
  <h1 class="title">
    <img src="/assets/title.png" class="title" alt="タイトル：DokoTabe">
  </h1>
  <p class="lh-lg mb-5">
    お近くの飲食店から１店舗だけ選んでくれるサービスです！
  </p>

  <%= form_with url: search_results_path do |form| %>
    <section class="row mb-3">
      <section class="col-md mb-4">
        <%= form.select :range, [["検索範囲：300m", "1"], ["検索範囲：500m", "2"], ["検索範囲：1000m", "3"], ["検索範囲：2000m", "4"], ["検索範囲：3000m", "5"]], {}, { class: "form-select text-wrap", "aria-label": "Default select example" } %>
      </section>
      <section class="col-md mb-4">
        <%= form.select :genre, [["お店のジャンル：すべて", "1"], ["a", "2"], ["b", "3"], ["c", "4"], ["d", "5"]], {}, { class: "form-select text-wrap", "aria-label": "Default select example" } %>
      </section>
      <section class="col-md mb-3">
        <%= form.select :budget, [["料金：こだわらない", "1"], ["a", "2"], ["b", "3"], ["c", "4"], ["d", "5"]], {}, { class: "form-select text-wrap", "aria-label": "Default select example" } %>
      </section>
      <section class="col-md-2">
        <%= button_tag(type: "submit", class: "btn btn-primary w-100") do %>
          <i class="bi bi-search"></i> 検索
        <% end %>
      </section>
    </section>
  <% end %>
</div>
